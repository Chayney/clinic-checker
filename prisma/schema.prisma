generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Facility {
  id            Int      @id @default(autoincrement())
  name          String
  phone         String
  address       String
  latitude      Float
  longitude     Float

  // 診療区分
  isNight       Boolean
  isHoliday     Boolean

  // 診療時間（簡易）
  openTime      String   // "18:00"
  closeTime     String   // "23:00"

  area          String   // 市区町村
  updatedAt     DateTime @updatedAt
}
